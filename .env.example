# Resume-Agent backend environment template
# Do not put real secrets here.

# Environment: dev | remote-dev
ENVIRONMENT=dev

# Backend service
BACKEND_PORT=9000
FRONTEND_URL=http://localhost:5173

# Database
# Production default (PostgreSQL)
USE_POSTGRESQL=true
POSTGRESQL_URL=postgresql+psycopg://resume_user:your_password@your_host:5432/resume_db

# Local development example (SQLite)
# USE_POSTGRESQL=false
# DATABASE_URL=sqlite:///./backend/resume.db

# Retired in production after migration:
# DATABASE_URL (MySQL value)
# MYSQLHOST / MYSQLPORT / MYSQLUSER / MYSQLPASSWORD / MYSQLDATABASE

# AI providers
DASHSCOPE_API_KEY=your_dashscope_api_key_here
ZHIPU_API_KEY=your_zhipu_api_key_here
DOUBAO_API_KEY=your_doubao_api_key_here

# COS
COS_SECRET_ID=your_cos_secret_id
COS_SECRET_KEY=your_cos_secret_key
COS_REGION=ap-guangzhou
COS_BUCKET=your_bucket_name

# Logging
LOG_LEVEL=INFO
LOG_MODE=console

# Agent streaming / history behavior toggles
AGENT_FAST_GREETING_ENABLED=true
AGENT_STREAM_HEARTBEAT_V2=true
AGENT_HISTORY_BACKEND=db
# 重要：当后端提示 DB_SCHEMA_MISMATCH 时，执行：
# alembic upgrade head
